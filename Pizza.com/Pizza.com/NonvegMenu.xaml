        <usercontrols:SlectedProductsList
            x:Name="SelectedProductListView"
            Grid.Column="1" Grid.Row="1"></usercontrols:SlectedProductsList>
        
        
        <TextBlock x:Name="UserSelectedTitle" 
                 FontSize="20"
                 Foreground="Blue"
                 FontWeight="Medium"
                 Grid.Column="1" 
                 HorizontalAlignment="Left" 
                 Height="40"
                 Margin="43,40,0,0" 
                 Grid.Row="1" 
